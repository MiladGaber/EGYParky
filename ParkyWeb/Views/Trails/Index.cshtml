
@{
    ViewData["Title"] = "Index";
}

<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Trail List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-info text-white"><i class="fas fa-plus"></i> &nbsp; Create New Trail</a>
        </div>
    </div>
    <br />
    <br />
    <div style="background-color:#403d3d" class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered table-secondary" style="width:100%">
            <thead>
                <tr class="table-info">
                    <th>National Park Name</th>
                    <th>Trail Name</th>
                    <th>Distance</th>
                    <th>Elevation</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/trail.js"></script>
}
